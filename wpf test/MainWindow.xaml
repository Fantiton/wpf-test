<Window x:Class="wpf_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="Cornsilk">
    <Grid Width="auto" Height="auto" Margin="10,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Background="White" BorderBrush="Black" BorderThickness="2" Height="35" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Grid.Column="1" Grid.Row="0"/>
        <Label Content="Dobierz kolor i do pieca!" VerticalAlignment="Center" Margin="10" Grid.Column="1" Grid.Row="1"></Label>

        <Label Content="R" VerticalAlignment="Center" Margin="10" Grid.Column="0" Grid.Row="2"></Label>
        <Slider VerticalAlignment="Center" Value="255" Maximum="255" Margin="10" Grid.Column="1" Grid.Row="2"></Slider>
        <Label Content="255" VerticalAlignment="Center" Margin="10" Grid.Column="2" Grid.Row="2"></Label>
               
        <Label Content="R" VerticalAlignment="Center" Margin="10" Grid.Column="0" Grid.Row="3"></Label>
        <Slider VerticalAlignment="Center" Value="255" Maximum="255" Margin="10" Grid.Column="1" Grid.Row="3"></Slider>
        <Label Content="255" VerticalAlignment="Center" Margin="10" Grid.Column="2" Grid.Row="3"></Label>
               
        <Label Content="R" VerticalAlignment="Center" Margin="10" Grid.Column="0" Grid.Row="4"></Label>
        <Slider VerticalAlignment="Center" Value="255" Maximum="255" Margin="10" Grid.Column="1" Grid.Row="4"></Slider>
        <Label Content="255" VerticalAlignment="Center" Margin="10" Grid.Column="2" Grid.Row="4"></Label>

        <Button Content="Pobierz" Background="Brown" Height="50" VerticalAlignment="Center" Margin="10" Grid.Column="1" Grid.Row="5"></Button>
        <Label Content="255, 255, 255" Grid.Column="1" Grid.Row="6"></Label>
    </Grid>
</Window>
